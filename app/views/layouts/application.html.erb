<!DOCTYPE html>
<html>
  <head>
    <title>HotelRunnerTodo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <% if @current_user.present? %>
    <header class="bg-gray-900">
      <nav class="flex flex-col items-center justify-between p-6 mx-auto max-w-7xl">
        <div class="text-white">
          <h1>Welcome <%= @current_user.username %>!</h1>
        </div>
        <div class="flex justify-end mt-4">
          <%= button_to "Logout", logout_path, method: :delete, class:"text-white" %>
        </div>
      </nav>
    </header>
  <% end %>

  <section class="bg-gray-50 dark:bg-gray-900">
    <div class="flex flex-col items-center px-6 py-8 mx-auto md:h-screen">

      <%= yield %>
    </div>
  </section>
  </body>
</html>
